{% block scripts %}
<script>
    // Banner click → evento a dataLayer (GTM)
    document.querySelectorAll('.data-banner').forEach(el => {
        el.addEventListener('click', () => {
            const name = el.getAttribute('data-banner-name') || 'unknown';
            window.dataLayer = window.dataLayer || [];
            window.dataLayer.push({ 
                event: 'developer_portfolio_click', 
                developer_name: name,
                source: 'william_portfolio',
                timestamp: new Date().toISOString()
            });
            console.log('Developer portfolio clicked:', name);
        });
    });

    // Smooth scroll para navegación interna
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Animación mejorada para tarjetas al hacer scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);

    // Aplicar animación a todas las tarjetas excepto las de desarrolladores
    document.querySelectorAll('.card-custom:not(.developer-card-inner)').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(30px)';
        card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(card);
    });

    // Animación especial para las tarjetas de desarrolladores
    const developerObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const cards = entry.target.querySelectorAll('.developer-card');
                cards.forEach((card, index) => {
                    setTimeout(() => {
                        card.style.opacity = '1';
                        card.style.animation = 'fadeInUp 0.6s ease forwards';
                    }, index * 100);
                });
            }
        });
    }, { threshold: 0.2 });

    // Observar la sección de desarrolladores
    const developersSection = document.querySelector('.container:has(.developer-card)');
    if (developersSection) {
        developerObserver.observe(developersSection);
    }

    // Tracking detallado de interacciones con tarjetas de desarrolladores
    document.querySelectorAll('.developer-card').forEach(card => {
        const developerName = card.querySelector('.data-banner').getAttribute('data-banner-name');
        
        // Hover tracking
        card.addEventListener('mouseenter', () => {
            window.dataLayer = window.dataLayer || [];
            window.dataLayer.push({
                event: 'developer_card_hover',
                developer_name: developerName,
                timestamp: new Date().toISOString()
            });
        });

        // Focus tracking para accesibilidad
        card.addEventListener('focus', () => {
            window.dataLayer = window.dataLayer || [];
            window.dataLayer.push({
                event: 'developer_card_focus',
                developer_name: developerName,
                timestamp: new Date().toISOString()
            });
        });
    });

    // Stats para la sección de desarrolladores
    function trackDeveloperSectionView() {
        window.dataLayer = window.dataLayer || [];
        window.dataLayer.push({
            event: 'developer_section_view',
            total_developers: document.querySelectorAll('.developer-card').length,
            timestamp: new Date().toISOString()
        });
    }

    // Tracking cuando se ve la sección de desarrolladores
    const devSectionObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                trackDeveloperSectionView();
            }
        });
    }, { threshold: 0.5 });

    const devSection = document.querySelector('h2:contains("Red de Desarrolladores")');
    if (devSection) {
        devSectionObserver.observe(devSection.parentElement);
    }

    // Efecto parallax sutil para las tarjetas de desarrolladores
    window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const rate = scrolled * -0.5;
        
        document.querySelectorAll('.developer-card-inner').forEach(card => {
            card.style.transform = `translateY(${rate * 0.1}px)`;
        });
    });

    // Preload de imágenes de avatares
    document.querySelectorAll('.developer-avatar img').forEach(img => {
        const imageLoader = new Image();
        imageLoader.src = img.src;
    });
</script>
